site_name: MSL ODT
site_description: Write Open Document Foundation documents with Python.
copyright: Copyright &copy; 2024 Measurement Standards Laboratory of New Zealand
repo_url: https://github.com/MSLNZ/msl-odt

theme:
  name: material
  language: en
  favicon: assets/images/favicon.ico
  features:
    - content.code.copy
    - navigation.expand
    - navigation.footer
    - navigation.indexes
    - navigation.sections
    - navigation.top
    - search.highlight
    - search.suggest
  palette:
    - media: "(prefers-color-scheme: light)"
      scheme: default
      primary: indigo
      accent: indigo
      toggle:
        icon: material/weather-sunny
        name: Switch to dark mode
    - media: "(prefers-color-scheme: dark)"
      scheme: slate
      primary: black
      accent: deep orange
      toggle:
        icon: material/weather-night
        name: Switch to light mode

watch: [src/msl/odt]

nav:
  - Overview: index.md
  - msl-odt: msl-odt_methods.md
  - Examples:
    - Basic Usage: examples/msl-odt_introduction.md
    - Appending: examples/msl-odt_append.md
    - Math: examples/msl-odt_math.md
    - Figures: examples/msl-odt_figures.md
    - Tables: examples/msl-odt_tables.md
    - Lists: examples/msl-odt_lists.md
  - About:
    - Release Notes: about/release-notes.md
    - License: about/license.md

markdown_extensions:
  - attr_list  # enables: [link](url){:target="_blank"}
  - pymdownx.snippets:  # enables: --8<--
      check_paths: true
      #auto_append: # do we need this
      #  - includes/abbreviations.md
  - toc:
      permalink: "Â¤"

plugins:
  - search
  - autorefs
  - mkdocstrings:
      handlers:
        python:
          paths: [src]
          import:
            - url: https://docs.python.org/3/objects.inv
              domains: [std, py]
          options:
            # General
            show_source: false

            # Headings
            show_root_toc_entry: false

            # Members
            filters: ["!^_"]
            inherited_members: true

            # Docstrings
            docstring_options:
              ignore_init_summary: true
            merge_init_into_class: true

            # Signatures
            separate_signature: true

extra:
  social:
  - icon: fontawesome/brands/github
    link: https://github.com/MSLNZ/msl-odt
  - icon: fontawesome/brands/python
    link: https://pypi.org/project/msl-odt/